{{> nav-all-plans}}

<div class="container">
    <div class="row" style="margin-top: 15%">
        <div class="col-lg-6 col-sm-12">
            <h2>Ati selectact planul 'Profesional'!</h2>
            <form action="/users/professional-plan" method="post">
                <div class="form-group">
                    <label for="email">Adresa de e-mail</label>
                    <input type="email" class="form-control" id="email"  name="email" placeholder="Introduceti email-ul dvs." required>
                </div>
                <div class="form-group">
                    <label for="full_name"> Numele si prenumele</label>
                    <input type="text" class="form-control" id="name" name="full_name" placeholder="Introduceti numele si prenumele dvs." required>
                    <small id="emailHelp" class="form-text text-muted">Datele dvs sunt confidentiale.</small>
                </div>
                <div class="form-group">
                    <label for="company_textarea">Datele companiei daca e cazul</label>
                    <textarea class="form-control" id="company_textarea" name="company_textarea" rows="10" placeholder="Semne de punctuatie acceptate : . , ! ?"></textarea>
                </div>
                <div class="g-recaptcha" data-sitekey="6LeoYIMUAAAAAMmgSwEjVVHL5mOjDoqKD2xERAuB"></div>
                <input id="professional-plan" name="professional_plan" type="hidden" value="professional-plan">
                <input type="hidden" name="ip" value="{{{ip}}}">
                <button type="submit" class="buttons" style="margin-top: 3%;margin-bottom: 25%">Trimite</button>
            </form>
        </div>
        <div class="col-lg-6  col-sm-12">
            <img src="/images/professionalplan.jpg" alt="welcome" class="img-fluid rounded">
        </div>
    </div>
</div>
