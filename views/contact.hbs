{{> nav}}
<div class="container" id="contact">
    <div class="row">

        <div class="col-lg-6 col-sm-12" style="margin-top: 10%">
            <h2>Contactati-ne</h2><hr>
            <form action="/users/contact" method="post">
                <div class="form-group">
                    <label for="email">Adresa de e-mail</label>
                    <input type="email" class="form-control" id="email"  name="email" placeholder="Introduceti email-ul dvs." required>
                </div>
                <div class="form-group">
                    <label for="full_name"> Numele si prenumele</label>
                    <input type="text" class="form-control" id="name" name="full_name" placeholder="Introduceti numele si prenumele dvs." required>
                    <small id="emailHelp" class="form-text text-muted">Datele dvs sunt confidentiale.</small>
                </div>
                <div class="form-group">
                    <label for="contact_textarea">Mesajul dvs.</label>
                    <textarea style="resize:none" class="form-control" id="contact_textarea" name="contact_textarea" rows="15" placeholder="Semne de punctuatie acceptate : . , ! ?" required></textarea>
                </div>
                <input type="hidden" name="ip" value="{{{ip}}}">
                <div class="g-recaptcha" data-sitekey="6LeoYIMUAAAAAMmgSwEjVVHL5mOjDoqKD2xERAuB"></div>
                <button type="submit" class="buttons" style="margin-top: 3%;margin-bottom: 25%">Trimite</button>
            </form>
        </div>

        <div class="col-lg-5 offset-1 col-sm-12" style="margin-top: 10%">
            <img src="/images/contactus.jpg" alt="contact" class="img-fluid rounded">
            <h2>Unde ne gasiti?</h2>
            <address>
                <p>Vying Technologies OÜ </p>
                <p>COD T.V.A.: EE101978154 </p>
                <p>Sepapaja tn 6</p>
                <p>District: Lasnamae linnaosa </p>
                <p>15551 Tallinn</p>
                <p>County: Harju</p>
                <p>Estonia</p>
                <p>e-mail: info@vying.ro</p>
                <p style="margin-bottom: 25%">WhatsApp: 004 0729 887 069</p>
            </address>
        </div>
    </div>


</div>
{{> footer}}
