<div class="container-fluid" id="faq">
    <div class="row" id="contact-overlay-support">
        <div class="col-lg-12 col-sm-12" id="contact-overlay">
            {{> nav}}
            <h1 class="h1-overlay">Contact us</h1>
        </div>
    </div>
    <div class="container" id="contact">
        <div class="row">
            <div class="col-lg-6 col-sm-12" style="margin-top: 10%">
                <h2>Contact us</h2><hr>
                <form action="/users/contact" method="post">
                    <div class="form-group">
                        <label for="email">E-mail address</label>
                        <input type="email" class="form-control" id="email"  name="email" placeholder="Enter your e-mail" required>
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                        <label for="full_name">Full name</label>
                        <input type="text" class="form-control" id="name" name="full_name" placeholder="Enter your full name" required>
                        <small id="emailHelp" class="form-text text-muted">We treat your data as strictly confidential.</small>
                    </div>
                    <div class="form-group">
                        <label for="contact_textarea">Your message</label>
                        <textarea style="resize:none" class="form-control" id="contact_textarea" name="contact_textarea" rows="15" placeholder="USE only the following punctuation  signs . , ! ?" required></textarea>
                    </div>
                    <input type="hidden" name="ip" value="{{{ip}}}">
                    <div class="g-recaptcha" data-sitekey="6LfMuIkUAAAAAFlx_PayuhNqOVqBJMdrJoeL6TOQ"></div>
                    <button type="submit" class="buttons" style="margin-top: 3%;margin-bottom: 25%">Send</button>
                </form>
            </div>

            <div class="col-lg-5 offset-1 col-sm-12" style="margin-top: 10%">
                <img src="/images/contactus.jpg" alt="contact" class="img-fluid rounded">
                <h2>Where can you find us?</h2>
                <address>
                    <p>Vying Technologies OÜ </p>
                    <p>VAT code: EE101978154 </p>
                    <p>Sepapaja tn 6</p>
                    <p>District: Lasnamae linnaosa </p>
                    <p>15551 Tallinn</p>
                    <p>County: Harju</p>
                    <p>Estonia</p>
                    <p>e-mail: info@vying.io</p>
                    <p style="margin-bottom: 25%">WhatsApp: 004 0729 887 069</p>
                </address>
            </div>
        </div>
    </div>

</div>
{{> footer}}
